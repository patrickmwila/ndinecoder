<%- include('./partials/header'); -%>

<div class="container contact-container">
  <h1>Get In Touch</h1>
  <form action="/success" method="POST" class="form">
    <div class="form-group">
        <label for="name" class="form-label">Your Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Patrick Mwila" tabindex="1" required>
    </div>
    <div class="form-group">
        <label for="email" class="form-label">Your Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="patrick@mwila.com" tabindex="2" required>
    </div>
    <div class="form-group">
        <label for="subject" class="form-label">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" placeholder="Greetings!" tabindex="3" required>
    </div>
    <div class="form-group">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" rows="5" id="message" name="message" placeholder="Enter Message..." tabindex="4"></textarea>
    </div>
    <div class="submit-btn">
        <button type="submit" class="btn btn-primary">Send Message!</button>
    </div>
  </form>
</div>

<%- include('./partials/footer'); -%>